<section class="container mt-12 ">
    <div class="  flex-1">
        <div class="container mx-auto">
            <div class="flex flex-wrap md:-mx-3">
                {% for post in articleslist | reverse %}
                    <div class="md:w-1/3 px-3 mb-6 w-full">
                        <a href="{{ post.url | url }}"
                           class="flex w-full h-full flex-col flex-wrap bg-cover bg-no-repeat bg-center rounded overflow-hidden hover:scale-105 transition duration-500 "
                           style="{% if post.data.cover %}background-image:url({% imageSrc "./static/img/"~post.data.cover, "400" %}{% endif %})">
                            <div class="bg-opacity-50 bg-black  p-5">
                                <h2 class="text-white text-lg mb-2 ">{{ post.data.title }}</h2>
                                <p class="text-white opacity-80 mb-2">{{ post.data.date | readableDate }}</p>
                                <p class="text-white opacity-80">{{ post.data.description }}</p>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>