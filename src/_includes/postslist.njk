<section class="container mt-12 ">
    <div class=" px-5 pb-24 mx-auto">
        <div class="flex flex-wrap -mx-4 -mt-4 -mb-10 sm:-m-4">

            {% for post in postslist | reverse %}
                <div class="p-4 pb-12 md:w-1/2 xl:w-1/3 sm:mb-0">
                    <div class="relative flex h-56 overflow-hidden border border-gray-400 rounded-lg shadow-md hover:shadow-lg">
                        <a class="" href="{{ post.url | url }}">
                            {% if post.data.cover %}{% image "./static/img/"~post.data.cover, "Verifications et contr√¥les", "(min-width: 30em) 50vw, 100vw" %}{% else %}
                                <img class="absolute inset-0 object-cover {{ post.data.images.align }} w-full h-full"
                                     src="/assets/images/no-image.jpg" alt="">
                            {% endif %}
                        </a>
                    </div>
                    <h3 class="mt-4 {{ colors.headingsCustom or colors.headingsDefault }}">
                        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
                    </h3>
                    <small>
                        {# Used conditionals here to keep control at the template levels rather than at the component level.  #}
                        {# Display the Author block if structure.g_showAuthors is true (default) #}
                    </small>
                    <div class="{{ colors.excerptCustom or colors.excerptDefault }}">
                        {{ post.data.excerpt }}
                    </div>

                    <div class="pt-2">
                        {% set tags = post.data.tags %}

                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
</section>




